#!/usr/bin/env ruby

require "yaml"

TODO_FILE = File.join(ENV['HOME'], 'Desktop', 'todo.yml')

todo = YAML.load_file(TODO_FILE)
p todo['test']

todo['test2'] = 'Hello'

YAML.write_file(TODO_FILE, todo)

def format_todo(todo_name, todo_body)
  [todo_name, todo_body].join(" ")
end

