#!/usr/bin/sh

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'
alias lt='ls -alt'
alias hr='hr -'
alias :q='clear'
alias :w='git commit && git push origin $(git rev-parse --abbrev-ref HEAD)'
alias :wa='git commit -a && git push origin $(git rev-parse --abbrev-ref HEAD)'
alias :qa='git push origin $(git rev-parse --abbrev-ref HEAD) && clear'
alias :wq=':w && clear'
alias :wqa=':wa && clear'
alias cpbr='git rev-parse --abbrev-ref HEAD | pbcopy'

alias pingu='ping www.google.com'
alias pingit='ping github.com'
