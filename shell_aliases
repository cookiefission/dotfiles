#!/usr/bin/sh

alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'
alias lt='ls -alt'
alias hr='hr -'
alias :q='clear'
alias :w='git commit && git push origin $(git rev-parse --abbrev-ref HEAD)'
alias :wa='git commit -a && git push origin $(git rev-parse --abbrev-ref HEAD)'
alias :qa='git push origin $(git rev-parse --abbrev-ref HEAD) && clear'
alias :wq=':w && clear'
alias :wqa=':wa && clear'
alias cinstall='git fetch && git pull origin $(git rev-parse --abbrev-ref HEAD) && composer install'
alias trees='[ -d src ] && tree src; [ -d lib ] && tree lib'
alias trapp='[ -d app ] && tree app'
alias tronf='[ -d config ] && tree config'
alias treet='( [ -d test* ] && tree test* ) || ( [ -d spec* ] && tree spec* )'
alias treets='trees; treet;'
alias phpunit='[ -f vendor/bin/phpunit ] && ./vendor/bin/phpunit'
alias coffeee='coffee -e'
alias cpbr='git rev-parse --abbrev-ref HEAD | pbcopy'
alias cdevbr='composer show --installed | grep --color=never dev'
alias pingu='ping www.google.com'
